<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NCD_Page"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="3">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorPrimary"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="BMI Status"
                android:textColor="@color/buttonColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bmi_sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/textBoxBorderColor"
                android:textSize="14sp"
                android:textStyle="bold"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="15dp"
                        android:text="Possibilities"
                        android:textColor="@color/buttonColor"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/textBoxBorderColor"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text="Blood Pressure: "/>

                    <TextView
                        android:id="@+id/bp_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/textBoxBorderColor"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Cholesterol: "/>

                        <TextView
                            android:id="@+id/cholesterol_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="38dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Diabetes: "/>

                        <TextView
                            android:id="@+id/diabetes_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Cancer: "/>

                        <TextView
                            android:id="@+id/cancer_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="72dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Fat liver: "/>

                        <TextView
                            android:id="@+id/fat_liver_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="66dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Arthritis: "/>

                        <TextView
                            android:id="@+id/arthritis_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="66dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:text="Heart Disease: "/>

                        <TextView
                            android:id="@+id/heart_disease_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/textBoxBorderColor"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="15dp"
                        android:text="Diet"
                        android:textColor="@color/buttonColor"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="false">
                    <TextView
                        android:id="@+id/diet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/textBoxBorderColor"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    </ScrollView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="38dp"
                android:text="Monthly Report"
                android:textStyle="bold"
                android:textColor="@color/textBoxBorderColor"
                android:onClick="monthly_report"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="38dp"
                android:text="E-Channeling"
                android:textStyle="bold"
                android:textColor="@color/textBoxBorderColor"
                android:onClick="echannel"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>