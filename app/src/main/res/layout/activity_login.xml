<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Login"
    android:orientation="vertical">



    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/emailicon"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/textBoxBorderColor"
        android:textColorHint="@color/textBoxBorderColor"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
         />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/passwordicon"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textColor="@color/textBoxBorderColor"
        android:textColorHint="@color/textBoxBorderColor"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="forgot_password"
        android:text="Forgot Password?"
        android:textColor="@color/textBoxBorderColor"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="45dp"
         />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button_round"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="login"
        android:text="Login"
        android:textColor="@color/textBoxBorderColor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="55dp"
         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="signup_page"
        android:text="Don't have an account? Signup"
        android:textColor="@color/textBoxBorderColor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="115dp"
         />





</LinearLayout>